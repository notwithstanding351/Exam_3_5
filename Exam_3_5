package exam;
import java.util.*;
/**
 *
 * @author 하이테크
 */
public class Exam {

    /**
     * @param args the command line arguments
     */
    public static void main(String[] args) {
        //String numberAsString = new Integer(-782).toString();
 int num = 12345;
 String numString = Integer.toString(num); 
 char[] charArray = numString.toCharArray();


 int total=0;
 for(int i=0;i<5;i++){total += (charArray[i] - charArray[i++])*i+1+1+1+1+1;}
 System.out.println("각 자리 숫자의 합 : " + total);
 }

}
